@model ExpenseManagementMVC.DTO.UserSignUpDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup - Expense Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" integrity="sha512-b2QcS5SsA8tZodcDtGRELiGv5SaKSk1vDHDaQRda0htPYWZ6046lr3kJ5bAAQdpV2mmA/4v0wQF9MyU6/pDIAg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <main class="col-md-7 col-lg-6 col-xl-5 mt-5 p-3 border border-primary mx-auto rounded-3">
            <form asp-controller="User" asp-action="Signup" method="POST">
                <label for="username" class="col-md-1 offset-md-1 col-form-label">Username</label>
                <div class="col-md-10 mx-auto">
                    <input type="text" class="form-control" name="username" id="username"
                            placeholder="Enter username" value="@Model.Username" />
                </div>
                <label for="password" class="col-md-1 offset-md-1 col-form-label text-start">Password</label>
                <div class="col-md-10 mx-auto">
                    <input type="password" class="form-control" name="password" id="password"
                            placeholder="Enter password" value="@Model.Password" />
                </div>
                <label for="password" class="col-md-5 offset-md-1 col-form-label text-start">Confirm Password</label>
                <div class="col-md-10 mx-auto">
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                            placeholder="Enter password" />
                </div>
                <label for="firstname" class="col-md-1 offset-md-1 col-form-label text-start">Firstname</label>
                <div class="col-md-10 mx-auto">
                    <input type="text" class="form-control" name="firstname" id="firstname"
                            placeholder="Enter firstname" value="@Model.Firstname" />
                </div>
                <label for="lastname" class="col-md-1 offset-md-1 col-form-label text-start">Lastname</label>
                <div class="col-md-10 mx-auto">
                    <input type="text" class="form-control" name="lastname" id="lastname"
                            placeholder="Enter lastname" value="@Model.Lastname" />
                </div>
                     
                <div class="offset-md-4 offset-3 mt-3 col-6 col-md-4 d-grid">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
            </form>
            <div>
                @if (ViewData["ErrorArray"] is not null)
                {
                    var errorArray = ViewData["ErrorArray"] as List<Error>;
                    @if (errorArray != null)
                    {
                        <ul class="mt-3">
                            @foreach (var error in errorArray)
                            {
                                <li class="text-danger">
                                    <p>@error.Message</p>
                                </li>
                            }
                        </ul>

                    }
                }
            </div>
        </main>
    </div>

</body>
</html>