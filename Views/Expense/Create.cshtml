@model ExpenseManagementMVC.DTO.ExpenseInsertDTO
@{
    ViewData["Title"] = "Insert Expense";
}

<form method="post">
    <div class="row mb-3 align-items-center">
        <label for="name" class="col-md-2 col-lg-1 form-label">Name</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="name" id="name" required
                   placeholder="Enter expense name" value="@Model.Name" />
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <label for="amount" class="col-md-2 col-lg-1 form-label">Amount</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="amount" id="amount" required
                   placeholder="Enter amount" />
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <label for="category" class="col-md-2 col-lg-1 form-label">Category</label>
        <div class="col-md-6">
            <select asp-for="@Model.Category" class="form-select" id="category" name="category" aria-label="Select category">
                <option selected disabled>Select Category</option>
                <option value="Bills">Bills</option>
                <option value="Education">Education</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Fitness">Fitness</option>
                <option value="Food & Drinks">Food & Drinks</option>
                <option value="Investment">Investment</option>
                <option value="Shopping">Shopping</option>
                <option value="Other">Other</option>
            </select>
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <label for="date" class="col-md-2 col-lg-1 form-label">Date</label>
        <div class="col-md-6">
            <input type="date" class="form-control" name="date" id="date"
                   placeholder="Enter date" / required value="@DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd")" />
        </div>
    </div>


    <div class="row mb-3">
        <div class="offset-md-2 offset-lg-1 col-md-3 mb-3 d-grid">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        <div class="col-md-3 d-grid mb-3">
            <a class="btn btn-outline-primary" href="/Home/Index">Cancel</a>
        </div>
    </div>
</form>

<div class="text-danger">
        @if (ViewData["Errors"] is not null)
        {
            var errors = ViewData["Errors"];
            @if (errors is List<Error>)
            {
                var listErrors = ViewData["Errors"] as List<Error>;
                <ul>
                    @foreach (var error in listErrors!)
                    {    
                        <li>@error.Message</li>
                    }
                </ul>
            } else
            {
                errors = errors as string;
                <ul>
                    <li>@errors</li>
                </ul>
            }  
        }
</div>